<% layout("/layouts/boilerplate") %>
<br><br>
    
    <div class="row">
        <div class="col-8 offset-1">
        <h3>Create New Listing</h3>
        <form method="POST" action="/listings" novalidate>
        <div class="md-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="Enter title" type="text" class="form-control" required>
        </div>
        <br>
        <div class="md-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="enter description" type="text" class="form-control" required></textarea>
        </div>
        <br> 
        <div class="md-3">
            <label for="image" class="form-label">Image URL</label>
            <input type="text" name="listing[image]" placeholder="enter image URL/link" class="form-control">
        </div>
        <br> 
        <div class="row">
            <div class="md-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="enter price" type="number" class="form-control" required>
        </div>
        <br>
        <div class="md-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="Enter country" type="text" class="form-control" required>
        </div>
        </div>
        <br> 
        <div class="md-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" required>
        </div>
        <br> <br>
        <button class="btn btn-dark add-btn">Add</button>
        <br><br>
    </form>
</div>
</div>